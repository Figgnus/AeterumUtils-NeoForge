[afk]
	#Seconds of inactivity before a non-/afk player is disconnected.
	# Default: 300
	# Range: > 1
	timeoutSeconds = 30
	#How many seconds before disconnect to start showing countdown messages.
	# Default: 10
	# Range: > 1
	warningWindowSeconds = 10
	#Minimum Create: Numismatics balance (in spur) required to enable /afk.
	# Default: 50
	# Range: > 0
	numismaticsRequiredSpurs = 50
	#Create: Numismatics spur cost charged while AFK after each upkeep interval. Set to 0 to disable upkeep charging.
	# Default: 50
	# Range: > 0
	afkUpkeepSpurs = 50
	#Seconds between AFK upkeep charges.
	# Default: 3600
	# Range: > 1
	afkUpkeepIntervalSeconds = 5

[messages]
	#Shown when player enables /afk.
	afkOn = "You are now AFK. You will not be kicked for inactivity."
	#Shown when player disables /afk with the command.
	afkOff = "AFK disabled."
	#Shown when AFK mode is disabled by movement.
	afkOffMoved = "AFK disabled because you moved."
	#Disconnect reason shown to kicked players.
	kicked = "Kicked for being AFK too long. Use /afk if you need to stay connected."
	#Shown when /afk is run by non-player command source.
	playersOnly = "Only players can use /afk."
	#Countdown text shown in action bar. Use {seconds} placeholder.
	kickCountdown = "AFK kick in {seconds} seconds."
	#Shown when player does not have enough Create: Numismatics balance. Supports {required} and {balance}.
	notEnoughBalance = "You need at least {required} spur to use /afk. Your balance: {balance} spur."
	#Shown when Create: Numismatics balance cannot be read. Supports {required}.
	balanceUnavailable = "Cannot verify your Create: Numismatics balance right now. Required: {required} spur."
	#Shown when AFK upkeep payment fails due to low balance. Supports {required} and {balance}.
	afkCanceledNotEnoughBalance = "AFK protection canceled. You need {required} spur for upkeep, but your balance is {balance} spur."
	#Shown when AFK upkeep payment fails because balance cannot be read. Supports {required}.
	afkCanceledBalanceUnavailable = "AFK protection canceled because balance verification failed. Required upkeep: {required} spur."
